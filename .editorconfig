# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# 4 space indentation
[*.{java,js,html,css}]
indent_style = space
indent_size = 4

# Use tab indentation for XML files, 2 spaces width
[*.xml]
indent_style = tab
tab_width = 2

# Markdown files (README.md)
[*.md]
trim_trailing_whitespace = false